@model SezenElifCaba_BlogSitesi.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Panel Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">Hoş geldiniz</h2>
            <div class="text-muted">Genel bakış ve hızlı erişim</div>
        </div>
        <div class="col-auto d-flex gap-2">
            <a href="/Blog/Create" class="btn btn-primary">Yeni Blog</a>
            <a href="/Project/Create" class="btn btn-success">Yeni Proje</a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted">Toplam Blog</div>
                            <div class="h3 mb-0">@Model.TotalBlogs</div>
                        </div>
                        <i class="bi bi-journal-richtext fs-1 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted">Toplam Proje</div>
                            <div class="h3 mb-0">@Model.TotalProjects</div>
                        </div>
                        <i class="bi bi-kanban fs-1 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted">Gelen Kutusu</div>
                            <div class="h3 mb-0">@Model.TotalContacts</div>
                        </div>
                        <i class="bi bi-inbox fs-1 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <strong>Son Blog Yazıları</strong>
                    <a href="/Blog" class="btn btn-sm btn-outline-primary">Tümü</a>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.RecentBlogs?.Count > 0)
                    {
                        foreach (var b in Model.RecentBlogs)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">@b.Title</div>
                                    <div class="small text-muted">@b.BlogDate.ToShortDateString()</div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-secondary" href="/Blog/Edit/@b.BlogID">Düzenle</a>
                                    <a class="btn btn-sm btn-primary" href="/Site/Blog/@b.BlogID" target="_blank">Görüntüle</a>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">Kayıt bulunamadı.</li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <strong>Son Projeler</strong>
                    <a href="/Project" class="btn btn-sm btn-outline-success">Tümü</a>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.RecentProjects?.Count > 0)
                    {
                        foreach (var p in Model.RecentProjects)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">@p.ProjectTitle</div>
                                    <div class="small text-muted">@p.ProjectDate.ToShortDateString()</div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-secondary" href="/Project/Edit/@p.ProjectID">Düzenle</a>
                                    <a class="btn btn-sm btn-success" href="/Site/Project/@p.ProjectID" target="_blank">Görüntüle</a>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">Kayıt bulunamadı.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>