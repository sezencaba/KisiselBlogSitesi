@model Blog

@{
    ViewData["Title"] = "Blog Güncelle";
}

<div class="container px-3 px-lg-4">
    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Blog Yazısını Güncelle</h5>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Listeye Dön</a>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        <input type="hidden" name="BlogID" value="@Model.BlogID" />
                        <input type="hidden" name="BlogPhoto" value="@Model.BlogPhoto" />
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input name="Title" value="@Model.Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogText" class="form-label">Ön Yazı</label>
                            <input name="BlogText" value="@Model.BlogText" class="form-control" />
                            <span asp-validation-for="BlogText" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BlogContext" class="form-label">Blog Yazısı</label>
                            <textarea name="BlogContext" class="form-control" rows="8">@Model.BlogContext</textarea>
                            <span asp-validation-for="BlogContext" class="text-danger"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="BlogDate" class="form-label">Blog Tarihi</label>
                                <input name="BlogDate" type="date" value="@Model.BlogDate.ToString("yyyy-MM-dd")" class="form-control" />
                                <span asp-validation-for="BlogDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Kapak Fotoğrafı</label>
                                <input name="BlogPhoto" class="form-control" type="file" accept="image/*" />
                                <div class="form-text">JPG veya PNG, tercihen 16:9 oranında.</div>
                                <span asp-validation-for="BlogPhoto" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-3 g-3">
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.BlogPhoto))
                                {
                                    <div class="small text-muted mb-2">Mevcut Kapak</div>
                                    <div class="ratio ratio-16x9">
                                        <img src="/images/Blogimg/@Model.BlogPhoto" class="w-100 h-100 object-cover rounded border" alt="@Model.Title" />
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="small text-muted mb-2">Yeni Önizleme</div>
                                <div class="ratio ratio-16x9 d-none" id="previewWrapper">
                                    <img id="previewImage" alt="Önizleme" class="w-100 h-100 object-cover rounded border" />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        let editor;
        if (window.CKEDITOR) {
            editor = CKEDITOR.replace('BlogContext');
        }
        
        const fileInput = document.querySelector('input[name="BlogPhoto"]');
        const previewWrapper = document.getElementById('previewWrapper');
        const previewImage = document.getElementById('previewImage');
        
        if (fileInput) {
            fileInput.addEventListener('change', function (e) {
                const file = e.target.files && e.target.files[0];
                if (!file) { previewWrapper.classList.add('d-none'); return; }
                const reader = new FileReader();
                reader.onload = function (ev) {
                    previewImage.src = ev.target.result;
                    previewWrapper.classList.remove('d-none');
                };
                reader.readAsDataURL(file);
            });
        }
        
        
        document.querySelector('form').addEventListener('submit', function(e) {
            if (editor) {
                editor.updateElement();
                console.log('CKEditor içeriği güncellendi:', document.querySelector('textarea[name="BlogContext"]').value);
            }
        });
    </script>
}

