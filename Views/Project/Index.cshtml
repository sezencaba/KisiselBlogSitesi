@model IEnumerable<Project>

@{
    ViewData["Title"] = "Projeler";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">Projeler</h2>
            <div class="text-muted">Tüm projelerinizi yönetin</div>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Yeni Proje
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(item.ProjectPhoto))
                    {
                        <div class="ratio ratio-16x9">
                            <img src="/images/Projeimg/@item.ProjectPhoto" class="card-img-top object-cover" alt="@item.ProjectTitle" />
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <small class="text-muted">@item.ProjectDate.ToShortDateString()</small>
                            <span class="badge bg-success">Proje</span>
                        </div>
                        <h5 class="card-title">@item.ProjectTitle</h5>
                        <div class="d-flex gap-2 mt-auto">
                            <a asp-action="Edit" asp-route-id="@item.ProjectID" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-pencil me-1"></i>Düzenle
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ProjectID" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye me-1"></i>Detay
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProjectID" class="btn btn-sm btn-outline-danger" 
                               onclick="return confirm('Projeyi silmek istediğinizden emin misiniz?')">
                                <i class="bi bi-trash me-1"></i>Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-kanban fs-1 text-muted mb-3"></i>
            <h4 class="text-muted">Henüz proje yok</h4>
            <p class="text-muted">İlk projenizi oluşturmak için yukarıdaki butona tıklayın.</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>İlk Projeyi Oluştur
            </a>
        </div>
    }
</div>
